{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup node",
    "build": "yarn build:css && cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -i ./styles/app.css -o ./app/styles/app.css --minify",
    "dev": "concurrently \"yarn dev:css\" \"yarn dev:remix\"",
    "dev:css": "tailwindcss -i ./styles/app.css -o ./app/styles/app.css --watch",
    "dev:remix": "cross-env NODE_ENV=development node -r dotenv/config -r ./mocks node_modules/.bin/remix dev",
    "start": "cross-env NODE_ENV=production remix-serve build"
  },
  "dependencies": {
    "@headlessui/react": "v1.4.3",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "accept-language-parser": "^1.5.0",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "i18next": "^21.6.13",
    "i18next-browser-languagedetector": "^6.1.3",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-backend": "^1.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.5",
    "react-use": "^17.3.2",
    "remix": "^1.2.3",
    "remix-utils": "^2.7.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@types/accept-language-parser": "^1.5.3",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "daisyui": "^2.6.1",
    "eslint": "^8.9.0",
    "msw": "^0.39.1",
    "postcss": "^8.4.7",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=16.x"
  }
}
