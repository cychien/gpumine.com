{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup node",
    "build": "yarn build:css && cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -i ./styles/app.css -o ./app/styles/app.css --minify",
    "dev": "concurrently \"yarn dev:css\" \"yarn dev:remix\"",
    "dev:css": "tailwindcss -i ./styles/app.css -o ./app/styles/app.css --watch",
    "dev:remix": "cross-env NODE_ENV=development node -r dotenv/config node_modules/.bin/remix dev",
    "start": "cross-env NODE_ENV=production remix-serve build"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "postcss": "^8.4.7",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
